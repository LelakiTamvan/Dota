<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.tugas01.xirpl3022.dota.MainActivity">

    <RelativeLayout tools:context="id.sch.smktelkom_mlg.tugas01.xirpl3022.dota2.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/ok"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/playtime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Validasi"
            android:id="@+id/validasi"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/checkBox2000x"
            android:layout_alignLeft="@+id/checkBox2000x"
            android:layout_alignStart="@+id/checkBox2000x" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;2000"
            android:id="@+id/checkBox2000"
            android:checked="false"
            android:layout_weight="0.48"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:id="@+id/checkBox2000x"
            android:checked="false"
            android:layout_weight="0.48"
            android:layout_alignTop="@+id/checkBox2000"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">3000"
            android:id="@+id/checkBox3000"
            android:checked="false"
            android:layout_weight="0.48"
            android:layout_alignTop="@+id/checkBox2000x"
            android:layout_alignRight="@+id/playtime"
            android:layout_alignEnd="@+id/playtime" />

        <EditText
            android:hint="Nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nick"
            android:layout_marginTop="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carry"
            android:id="@+id/radioButtonCR"
            android:checked="false"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:id="@+id/radioButtonSP"
            android:checked="false"
            android:layout_below="@+id/radioButtonCR"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Dota"
            android:id="@+id/playtime"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Play Style"
            android:id="@+id/textView5"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/nick"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DOTA 2 Playtime"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/radioButtonSP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MMR"
            android:id="@+id/textView7"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/hasil3"
            android:layout_alignRight="@+id/ok"
            android:layout_alignEnd="@+id/ok" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasil"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/ok"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasil2"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/hasil"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasil3"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/hasil2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="214dp"
            android:layout_height="62dp"
            android:id="@+id/hasil4"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/validasi"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
